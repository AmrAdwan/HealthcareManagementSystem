@model HealthcareManagementSystem.Models.Appointment

@{
  ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
  <h4>Appointment</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Date)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Date)
    </dd>
    <dt class="col-sm-2">
      Patient's Name
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Patient.FirstName)
      @Html.DisplayFor(model => model.Patient.LastName)
    </dd>
    <dt class="col-sm-2">
      Location
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Location.Name)
    </dd>
  </dl>
</div>

<form asp-action="DeleteAppointment">
  <input type="hidden" asp-for="AppointmentId" />
  <div class="form-group">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Appointments" asp-route-id="@Model.DoctorId" class="btn btn-secondary">Cancel</a>
  </div>
</form>
