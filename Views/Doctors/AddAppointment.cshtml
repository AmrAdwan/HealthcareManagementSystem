@model HealthcareManagementSystem.Models.Appointment

@{
  ViewData["Title"] = "Add Appointment";
}

<h1>Add Appointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="AddAppointment">
      <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="datetime-local"
          value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="Date" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label class="control-label">Patient's name</label>
        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label class="control-label">Location</label>
        <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
      </div>
      <input type="hidden" asp-for="DoctorId" />
      <div class="form-group">
        <br>
        <input type="submit" value="Add" class="btn btn-primary" /> |
        <a asp-action="Index" asp-route-doctorId="@Model.DoctorId" class="btn btn-secondary">Back to Doctor Info</a>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
