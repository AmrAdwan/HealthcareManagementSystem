@model HealthcareManagementSystem.Models.Billing

@{
  ViewData["Title"] = "Delete Billing";
}

<h1>Delete Billing</h1>

<h4>Billing</h4>
<hr />
<div class="row">
  <div class="col-md-10">
    <h4>Are you sure you want to delete this billing?</h4>
    <div>
      <h5>Billing</h5>
      <div>
        <dl class="row">
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
          </dd>
          <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
          </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
          </dd>
        </dl>
      </div>
      <form asp-action="DeleteBilling">
        <input type="hidden" asp-for="BillingId" />
        <input type="hidden" asp-for="PatientId" />
        <div class="form-group">
          <input type="submit" value="Delete" class="btn btn-danger" /> |
          <a asp-action="Billings" asp-route-id="@Model.PatientId" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
