@model HealthcareManagementSystem.Models.Billing

@{
  ViewData["Title"] = "Edit Billing";
}

<h1>Edit Billing</h1>

<h4>Billing</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="EditBilling">
      <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" 
        placeholder="Date" value="@Model.Date.ToString("yyyy-MM-dd")"/>
        <span asp-validation-for="Date" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" type="number" class="form-control"/>
        <span asp-validation-for="Amount" class="text-danger"></span>
      </div>
      <input type="hidden" asp-for="PatientId" />
      <input type="hidden" asp-for="BillingId" />
      <div class="form-group">
        <br>
        <input type="submit" value="Save" class="btn btn-primary" /> | 
        <a asp-action="Billings" asp-route-id="@Model.PatientId" class="btn btn-secondary">Back to Billings
          List</a>
      </div>
    </form>
  </div>
</div>
@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
