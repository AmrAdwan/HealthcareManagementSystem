@model HealthcareManagementSystem.Models.Patient

@{
  ViewData["Title"] = "Appointments for " + Model.FirstName + " " + Model.LastName;
}

<h1>Appointments for @Model.FirstName @Model.LastName</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Doctor</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var appointment in Model.Appointments)
    {
      <tr>
        <td>@appointment.Date.ToString("dd-MM-yyyy HH:mm")</td>
        <td>@appointment.Doctor.FirstName @appointment.Doctor.LastName</td>
        <td>@appointment.Location.Name</td>
      </tr>
    }
  </tbody>
</table>

<div>
  <input type="hidden" asp-for="PatientId" />
  <a asp-action="Index" asp-route-patientId="@Model.PatientId" class="btn btn-secondary">Back to Patient Info</a>
</div>
